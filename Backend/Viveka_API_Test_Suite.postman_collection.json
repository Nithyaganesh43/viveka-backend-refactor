      "name": "OTP Management",
      "item": [
        {
          "name": "1. Send OTP (Mock Print)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{phoneNumber}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/otp/send",
              "host": ["{{baseUrl}}"],
              "path": ["otp", "send"]
            },
            "description": "Send OTP to phone number (prints 4-digit OTP to console)\nNote: Check server logs for OTP output"
          },
          "response": []
        },
        {
          "name": "2. Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{phoneNumber}}\",\n  \"otp\": \"{{otp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/otp/verify",
              "host": ["{{baseUrl}}"],
              "path": ["otp", "verify"]
            },
            "description": "Verify OTP sent to phone number\nNote: Use the OTP printed in console from step 1"
          },
          "response": []
        },
        {
          "name": "3. Clear OTP Session",
          "request": {
            "method": "POST",
