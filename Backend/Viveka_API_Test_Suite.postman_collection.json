            "url": {
              "raw": "{{baseUrl}}/auth/client/{{clientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "client", "{{clientId}}"]
            },
            "description": "Get client details (password excluded)"
          },
          "response": []
        },
