        {
          "name": "5. Login Client",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const responseData = pm.response.json();",
                  "  pm.environment.set('clientId', responseData.clientId);",
                  "  pm.environment.set('token', responseData.token);",
                  "  pm.environment.set('deviceSessionId', responseData.deviceSessionId);",
                  "  console.log('✅ Client ID:', responseData.clientId);",
                  "  console.log('✅ Device Session ID:', responseData.deviceSessionId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{phoneNumber}}\",\n  \"password\": \"SecurePassword123!\",\n  \"deviceId\": \"{{deviceId}}\",\n  \"deviceName\": \"iPhone 15 Pro\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login client and create device session\nNote: Enforces one-device policy (logs out previous devices)"
          },
          "response": []
        },
        {
          "name": "6. Get Client Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
